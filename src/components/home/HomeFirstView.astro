---
import { Image } from 'astro:assets';
import fvImage from '@assets/fv.jpg';
---

<section class="fv">
  <figure class="fv-image">
    <Image src={fvImage} alt="Hachiue" />
  </figure>
</section>

<style lang="scss">
  .fv {
    .fv-image {
      margin: 0 auto;
      overflow: hidden;
      border-radius: 999px;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    @include mq-mobile {
      padding-top: 144px;

      .fv-image {
        width: calc(350 / 390 * 100vw);
        height: calc(800 / 390 * 100vw);
      }
    }

    @include mq-desktop {
      padding-top: 218px;

      .fv-image {
        width: calc(840 / 1440 * 100%);
        min-width: 700px;
        height: 1400px;
      }
    }
  }
</style>
