---
import { Image } from 'astro:assets';
import fvImage from '@assets/fv.jpg';
import fvText from '@assets/fv_text.svg';
---

<section id="home" class="fv">
  <div class="inner">
    <div class="fv-text">
      <Image src={fvText} alt="" />
      <Image src={fvText} alt="" />
    </div>
    <figure class="fv-image">
      <Image src={fvImage} alt="" />
    </figure>
  </div>
</section>

<style lang="scss">
  .fv {
    overflow: hidden;

    @include mq-mobile {
      padding-top: 80px;
    }

    @include mq-desktop {
      padding-top: 100px;
    }
  }

  .fv-text {
    display: flex;
    align-items: center;
    width: max-content;
    animation: carousel 38s linear infinite;
    animation-delay: -34s;

    img {
      box-sizing: content-box;
    }

    @include mq-mobile {
      img {
        padding: 0 20px;
      }
    }

    @include mq-desktop {
      img {
        width: 2660px;
        padding: 0 30px;
      }
    }
  }

  .fv-image {
    overflow: hidden;
    border-radius: 999px;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @include mq-mobile {
      width: calc(350 / 390 * 100vw);
      height: calc(800 / 390 * 100vw);
      margin: 10px auto;
    }

    @include mq-desktop {
      width: calc(840 / 1440 * 100%);
      min-width: 700px;
      height: 1400px;
      margin: 20px auto;
    }
  }

  @keyframes carousel {
    from {
      transform: translateX(0%);
    }

    to {
      transform: translateX(-50%);
    }
  }
</style>
